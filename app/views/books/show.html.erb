<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @book.content %>
</p>

<p>
  <strong>ISBN:</strong>
  <%= @book.isbn %>
</p>

<% if @book.cover.attached? %>
  <%= image_tag @book.cover.variant(resize: "250") %>
<% else %>
  <%= image_tag image_path('default_cover.png') %>
<% end %>

<p>
  <strong>Publish date:</strong>
  <%= @book.publish_date %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
